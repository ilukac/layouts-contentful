{% extends '@nglayouts/block/block.html.twig' %}

{% block content %}

    {% set field_identifier = block.parameter('field_identifier').value %}

    {% if field_identifier is not empty %}
        {% set css_class = 'field-' ~ field_identifier ~ ' ' ~ block.parameter('css_class').value %}
        {% set css_id =  block.parameter('css_id').value %}
        {% set html_element =  block.parameter('html_element').value %}
    {% endif %}

    {% set field = block.dynamicParameter('field') %}

    {% block contentful_entry_field %}
        {% if field is not empty %}
            {% if field.type == 'integer' or field.type == 'double' %}
                <{{ html_element }} class="{{ css_class }} field field-{{ field.type }}"{% if css_id is not null %} id="{{ css_id }}"{% endif %}>
                {{ field.value }}
                </{{ html_element }}>
            {% elseif field.type == 'boolean' %}
                <{{ html_element }} class="{{ css_class }} field field-{{ field.type }}"{% if css_id is not null %} id="{{ css_id }}"{% endif %}>
                {% if field.value %} YES {% else %} NO {% endif %}
                </{{ html_element }}>
            {% else %}
                {{ field_identifier }} {{ " field is not compatible with this block view"| trans }}
            {% endif %}
        {% endif %}
    {% endblock %}

{% endblock %}
